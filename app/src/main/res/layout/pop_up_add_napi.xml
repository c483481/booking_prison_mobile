<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="380dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/pop_up_background">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/ic_profile"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="100dp"
        android:hint="Nama"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:id="@+id/pop_up_name"
        android:autofillHints="name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:hint="Waktu Tahanan (Tahun)"
        android:id="@+id/pop_up_long_time"
        android:autofillHints="password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="220dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="20sp"
        android:hint="Alasan"
        android:id="@+id/pop_up_reason"
        android:autofillHints="password"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="280dp"
        >
        <Button
            android:id="@+id/pop_up_add_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#42FF00"
            android:textColor="@color/black"
            android:text="Tambah"
            />
        <Button
            android:id="@+id/pop_up_cancel_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#2596be"
            android:text="Kembali"
            android:textColor="@color/black"
            />
    </LinearLayout>
</RelativeLayout>